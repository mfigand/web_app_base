#!/bin/bash

function run_in_docker {
  echo "Running $1"
  docker-compose run --rm web $@
}

function print_help {
  cat <<HELP
  ./run.sh lint <command> <arguments>
  commands:
  - rubocop: run rubocop -a
  - reek: run reek
  - no_command: run rubocop reek
HELP
}

case $1 in
  rubocop|reek)
    run_in_docker $@;;
  help)
    print_help; exit 0
    ;; 
  *)  run_in_docker rubocop -a $@
      run_in_docker reek $@;;
esac
